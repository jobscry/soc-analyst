{
    "title": "Create or Update User",
    "type": "object",
    "properties": {
        "username": {
            "type": "string",
            "minLength": 3,
            "maxLength": 50,
            "pattern": "^[a-z0-9\\-_]{3,}$"
        },
        "password": {
            "type": "string"
        },
        "is_admin": {
            "type": "boolean"
        },
        "is_manager": {
            "type": "boolean"
        }
    },
    "required": [
        "username",
        "password"
    ]
}